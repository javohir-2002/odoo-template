<!-- custom_login_layout.xml -->
<odoo>
    <template id="login" name="New login" inherit_id="web.login_layout">
        <!-- Hide the current login form -->
        <xpath expr="//div[@class='card-body']" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>

        <!-- Replace the container with the new login form -->
        <xpath expr="//div[@class='container py-5']" position="replace">
            <div
                class="w-100 h-100 d-flex flex-column align-items-center justify-content-center position-relative"
                style="background: linear-gradient(#1e0d59, #01002e); gap: 50px; height: 100vh; z-index: 2">
                <svg width="877" height="768" viewBox="0 0 877 768" fill="none"
                    style="position: absolute; top: 32px; left: 15%; z-index: 0 !important; height: 85%;"
                    xmlns="http://www.w3.org/2000/svg">
                    <path opacity="0.12"
                        d="M876.5 848.06C855.107 389.762 493.091 22.0642 41.9333 0.5H876.5V848.06Z"
                        stroke="#8D3FFF" />
                </svg>
                <img src="/hms_app/static/description/Logo.svg" alt="Logo" style="position: absolute; top: 60px; left: 50%; transform: translateX(-50%)" />
                <select id="language" style="z-index: 2; outline:none; position: absolute; right: 8.5%; top: 10%; background: transparent; border: none; color: rgba(255, 255, 255, 0.60);">
                    <option style="color:black">üá∫üáø Uzbek</option>
                    <option style="color:black">üá¨üáß English</option>
                    <option style="color:black">üá∑üá∫ Russian</option>
                </select>
                <form class="oe_login_form"
                    style="width: 380px; height: fit-content; z-index: 2; border-radius: 20px; border: 2px solid rgba(255, 255, 255, 0.06); background: #120D40;"
                    role="form" t-attf-action="/web/login" method="post"
                    onsubmit="this.action = '/web/login' + location.hash">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                    <div class="mb-3" t-if="databases and len(databases) &gt; 1">
                        <label for="db" class="col-form-label">Database</label>
                        <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                            <input type="text" name="db" t-att-value="request.db" id="db"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required" readonly="readonly" />
                            <a role="button" href="/web/database/selector" class="btn btn-secondary">
                                Select <i class="fa fa-database" role="img" aria-label="Database"
                                    title="Database"></i></a>
                        </div>
                    </div>

                    <div class="login_field">
                        <div class="text-center" style="background: rgba(255, 255, 255, 0.04);border-radius: 20px 20px 0px 0px">
                            <h2
                                style="padding: 24px; font-size: 20px; color: rgba(255, 255, 255, 0.60);">Log
                                in</h2>
                        </div>
                        <div class="mb-3 field-login d-flex flex-column" style="padding: 0 20px;">
                            <label for="login" class="form-label"
                                style="color: rgba(255, 255, 255, 0.60); font-size: 14px;">Email</label>
                            <input type="text" placeholder="Email" name="login" t-att-value="login"
                                id="login"
                                required="required" autocomplete="username" autofocus="autofocus"
                                autocapitalize="off"
                                style="outline: none; color: rgba(255, 255, 255, 0.40); border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.08); background: rgba(255, 255, 255, 0.04); height: 40px; text-indent: 12px;" />
                        </div>

                        <div class="mb-2 field-login d-flex flex-column" style="padding: 0 20px;">
                            <label for="password" class="form-label"
                                style="color: rgba(255, 255, 255, 0.60); font-size: 14px;">Password</label>
                            <input type="password" placeholder="Password" name="password"
                                id="password"
                                required="required" autocomplete="current-password"
                                t-att-autofocus="'autofocus' if login else None" maxlength="4096"
                                style="outline: none; color: rgba(255, 255, 255, 0.40); border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.08); background: rgba(255, 255, 255, 0.04); height: 40px; text-indent: 12px;" />
                        </div>
                        <a href="#"
                            style="color: rgba(255, 255, 255, 0.60); padding: 0 20px; text-decoration-line: underline; font-size: 14px;">Forgot
                            password?</a>
                    </div>
                    <p class="p-1 m-3 rounded" style="background: rgba(255, 255, 255, 0.04);color: red; font-size: 14px" t-if="error" role="alert">
                        <t t-esc="error" />
                    </p>
                    <p class="alert alert-success" t-if="message" role="status">
                        <t t-esc="message" />
                    </p>

                    <div class="mb-3 mt-4 field-login d-flex flex-column"
                        style="padding: 0 20px;z-index: 2">
                        <button type="submit" class="btn btn-primary"
                            style="border-radius: 8px; background: #8D3FFF; height: 40px;color: #fff;">Log
                            in</button>
                        <div class="o_login_auth"></div>
                    </div>
                    <div class="position-absolute" style="bottom: 5px; left: 5%; color: rgba(255, 255, 255, 0.40); font-size: 12px;">
                        <p>¬© 2024, ‚ÄúMOVO‚Äù. All rights reserved.</p>
                    </div>
                    <div class="position-absolute d-flex align-items-center" style="gap: 15px; bottom: 25px; right: 5%; font-size: 12px;">
                        <a style="color: rgba(255, 255, 255, 0.40);" href="#">Privacy Policy</a>
                        <a style="color: rgba(255, 255, 255, 0.40);" href="#">Terms of use</a>
                        <a style="color: rgba(255, 255, 255, 0.40);" href="#">Cookie Policy</a>
                    </div>
                    <input type="hidden" name="redirect" t-att-value="redirect" />
                </form>
            </div>
        </xpath>
    </template>
</odoo>

<odoo>
    <data>

        <record id="view_legal_representative_tree" model="ir.ui.view">
            <field name="name">legal.representative.tree</field>
            <field name="model">legal.representative</field>
            <field name="arch" type="xml">
                <tree string="Legal Representatives">
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="sex"/>
                    <field name="birthday"/>
                    <field name="citizenship"/>
                    <field name="degree_of_kinship"/>
                </tree>
            </field>
        </record>

        <record id="view_legal_representative_form" model="ir.ui.view">
            <field name="name">legal.representative.form</field>
            <field name="model">legal.representative</field>
            <field name="arch" type="xml">
                <form string="Legal Representative">
                    <header>
                        <h1 class="oe_title">Legal Representative</h1>
                    </header>
                    <sheet>
                        <group>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="sex"/>
                            <field name="birthday"/>
                            <field name="birthday_country"/>
                            <field name="birthday_city"/>
                            <field name="citizenship"/>
                            <field name="degree_of_kinship"/>
                            <field name="passport"/>
                            <field name="series"/>
                            <field name="series_num" />
                            <field name="date_of_issue"/>
                            <field name="end_of_issue"/>
                            <field name="given_by"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_legal_representative_tree" model="ir.actions.act_window">
            <field name="name">Legal Representatives</field>
            <field name="res_model">legal.representative</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_legal_representative_tree"/>
        </record>

        <record id="action_legal_representative_form" model="ir.actions.act_window">
            <field name="name">Legal Representative</field>
            <field name="res_model">legal.representative</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_legal_representative_form"/>
            <field name="target">current</field>
        </record>
    </data>
</odoo>

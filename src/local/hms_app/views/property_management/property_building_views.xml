<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_property_building_form" model="ir.ui.view">
        <field name="name">property.building.form</field>
        <field name="model">property.building</field>
        <field name="arch" type="xml">
            <form string="Property Building">
                <sheet>
                    <group>
                        <field name="building_name"/>
                        <field name="number_of_floor"/>
                    </group>
                    <notebook>
                        <page string="Floors">
                            <field name="floor_ids">
                                <tree editable="bottom">
                                    <field name="number"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_building_tree" model="ir.ui.view">
        <field name="name">property.building.tree</field>
        <field name="model">property.building</field>
        <field name="arch" type="xml">
            <tree string="Property Building">
                <field name="building_name"/>
                <field name="number_of_floor"/>
            </tree>
        </field>
    </record>
    </data>
</odoo>

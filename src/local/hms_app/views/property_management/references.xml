        <record id="view_new_template_form" model="ir.ui.view">
            <field name="name">new.template.form</field>
            <field name="model">new.template</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <h2 class="oe_title">Template settings</h2>
                        <h6 class="custom-hr"></h6>
                        <div class="alert alert-info" role="alert">
                            <p class="mb-0">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                                Create a file in *.docx format (for example, in the Microsoft Word editor).
                                Copy the list information below and paste it into the text of the document.
                                When generating a report, the booking data is automatically substituted for
                                the behavior variables. Download the document template.
                                The created document can be downloaded in the "Documents" section and in
                                the list of documents in the quick view of the reservation.
                            </p>
                        </div>
                        <group>
                            <field name="status" widget="boolean_toggle"/>
                            <field name="name"/>
                            <field name="room_type"/>
                            <field name="document_rules"/>
                            <field name="document"/>
                            <field name="document_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

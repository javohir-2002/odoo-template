<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_booking_discount_tree" model="ir.ui.view">
        <field name="name">booking.discount.tree</field>
        <field name="model">booking.discount</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price_id"/>
                <field name="discount_price"/>
                <field name="type_of_discount"/>
                <field name="value"/>
                <field name="apply"/>
            </tree>
        </field>
    </record>

    <record id="view_booking_discount_form" model="ir.ui.view">
        <field name="name">booking.discount.form</field>
        <field name="model">booking.discount</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price_id"/>
                        <field name="discount_price"/>
                        <field name="type_of_discount"/>
                        <field name="value"/>
                        <field name="reason"/>
                        <field name="apply"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<odoo>
    <record id="view_booking_price_detail_form" model="ir.ui.view">
        <field name="name">booking.price.detail.form</field>
        <field name="model">booking.price.detail</field>
        <field name="arch" type="xml">
            <form string="Price Details">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="discount_id"/>
                        <field name="active"/>
                        <field name="rate_plan_id" readonly="1" options='{"no_open": True}'/>
                        <field name="date" readonly="1"/>
                        <field name="amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_room_services_tree" model="ir.ui.view">
        <field name="name">room.services.tree</field>
        <field name="model">room.services</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_id"/>
                <field name="payment_type"/>
            </tree>
        </field>
    </record>

    <record id="view_room_services_form" model="ir.ui.view">
        <field name="name">room.services.form</field>
        <field name="model">room.services</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="service_id"/>
                        <field name="payment_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_room_form" model="ir.ui.view">
        <field name="name">front_desk.move_room.form</field>
        <field name="model">front_desk.move_room</field>
        <field name="arch" type="xml">
            <form string="Room Move">
                <sheet>
                    <group>
                        <field name="booking_no"/>
                    </group>
                    <group>
                        <group string="Move from">
                            <field name="old_accommodation_id"/>
                            <field name="room_number"/>
                            <field name="check_in_date"/>
                            <field name="check_out_date"/>
                            <field name="prev_cost"/>
                        </group>
                        <group string="Move to">
                            <field name="new_accommodation_id" can_create="True" can_write="True"
                                       field_id="accommodation_0" domain="[('booking_unique', '=', booking_no), ('vacant', '>', 0)]"/>

                            <field name="new_room" can_create="True" can_write="True" domain="[('id', 'in', available_room_ids)]"/>

                            <field name="available_room_ids" invisible="1"/>
                            <field name="new_check_in_date"/>
                            <field name="new_check_out_date"/>
                            <field name="new_cost"/>
                            <field name="dont_charge"/>
                            <field name="charge_to_guest"/>
                            <field name="charge_to_property"/>
                            <field name="room_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_move_room_tree" model="ir.ui.view">
        <field name="name">front_desk.move_room.tree</field>
        <field name="model">front_desk.move_room</field>
        <field name="arch" type="xml">
            <tree string="Room Moves">
                <field name="booking_id"/>
                <field name="old_accommodation_id"/>
                <field name="room_number"/>
                <field name="new_accommodation_id"/>
                <field name="new_room"/>
                <field name="new_check_in_date"/>
                <field name="new_check_out_date"/>
                <field name="new_cost"/>
                <field name="dont_charge"/>
                <field name="charge_to_guest"/>
            </tree>
        </field>
    </record>

</odoo>

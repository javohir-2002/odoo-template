<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_group_booking_payment_tree" model="ir.ui.view">
        <field name="name">group.booking.payment.tree</field>
        <field name="model">group_booking.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manage_invoice"/>
                <field name="payment_date"/>
                <field name="payment_method"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>
    <record id="view_group_booking_payment_form" model="ir.ui.view">
        <field name="name">group.booking.payment.form</field>
        <field name="model">group_booking.payment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="booking_id"/>
                    <field name="manage_invoice"/>
                    <field name="payment_date"/>
                    <field name="payment_method"/>
                    <field name="comment"/>
                    <field name="booking_invoices" readonly="0" can_create="0"/>
                    <field name="total_amount"/>
                    <field name="is_payed"/>
                </group>
            </form>
        </field>
    </record>
</odoo>

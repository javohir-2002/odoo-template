<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_room_inventory_tree" model="ir.ui.view">
        <field name="name">room.inventory.tree</field>
        <field name="model">room.inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="building_id"/>
                <field name="floor_id"/>
                <field name="room_type"/>
                <field name="beds_in_room"/>
                <field name="number"/>
                <field name="ignore_in_statistics"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <record id="view_room_inventory_search" model="ir.ui.view">
        <field name="name">room.inventory.search</field>
        <field name="model">room.inventory</field>
        <field name="arch" type="xml">
            <search string="Room Inventory">
                <field name="building_id"/>
                <field name="floor_id"/>
                <field name="room_type"/>
                <field name="number"/>


                <separator string="Room Types"/>
                <filter name="room_type_filter" string="Room Type" domain="[]" context="{'group_by':'room_type'}"/>
                <separator string="Floors"/>
                <filter name="floor_filter" string="Floor" domain="[]" context="{'group_by':'floor_id'}"/>
            </search>
        </field>
    </record>

    <record id="room_inventory_form" model="ir.ui.view">
        <field name="name">room.inventory.form</field>
        <field name="model">room.inventory</field>
        <field name="arch" type="xml">
            <form string="Create room inventory">
                <group>
                    <field name="building_id"/>
                    <field name="floor_id"/>
                    <field name="room_type"/>
                    <field name="beds_in_room"/>
                    <field name="number"/>
                    <field name="ignore_in_statistics"/>
                    <field name="comment"/>
                    <field name="dates_of_stay_from"/>
                    <field name="dates_of_stay_to"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_room_inventory_generate_form" model="ir.ui.view">
        <field name="name">room.inventory.generate.form</field>
        <field name="model">room_inventory.generate</field>
        <field name="arch" type="xml">
            <form string="Generate Room Inventory">
                <group>
                    <field name="building_id"/>
                    <field name="floor_id"/>
                    <field name="room_type"/>
                    <field name="beds_in_room"/>
                    <field name="number" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="number"/>
                        </tree>
                        <form>
                            <group>
                                <field name="number"/>
                            </group>
                        </form>
                    </field>
                    <field name="ignore_in_statistics"/>
                    <field name="comment"/>
                </group>
                <footer>
                    <button string="Yaratish" type="object" name="generate_room_inventory" class="btn-primary"/>
                    <button string="Bekor qilish" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

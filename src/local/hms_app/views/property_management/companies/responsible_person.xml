<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_responsible_person_tree" model="ir.ui.view">
            <field name="name">responsible.person.tree</field>
            <field name="model">responsible.person</field>
            <field name="arch" type="xml">
                <tree string="Responsible Persons">
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="view_responsible_person_form" model="ir.ui.view">
            <field name="name">responsible.person.form</field>
            <field name="model">responsible.person</field>
            <field name="arch" type="xml">
                <form string="Responsible Person">
                    <group>
                        <field name="last_name"/>
                        <field name="first_name"/>
                        <field name="middle_name"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>

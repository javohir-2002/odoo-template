<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">property_management.company.tree</field>
        <field name="model">company</field>
        <field name="arch" type="xml">
            <tree string="Companies">
                <field name="company_name"/>
                <field name="company_type"/>
<!--                <field name="swift_code"/>-->
                <field name="company_phone"/>
                <field name="company_email"/>
                <field name="fax"/>
                <field name="full_name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">company.form</field>
        <field name="model">company</field>
        <field name="arch" type="xml">
            <form string="Company">
                <notebook>
                    <page string="Profile Details">
                        <h1 class="oe_title">Company Profile</h1>
                        <field name="company_name" readonly="1"/>
                        <header>
                            <div class="alert alert-info" role="alert">
                                <p class="mb-0">
                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                    This company is created automatically and will be considered an agent for all
                                    booking
                                    ade
                                    though the assigned channel.
                                </p>
                            </div>
                        </header>

                        <group string="Profile parameters">
                            <field name="status" widget="boolean_toggle"/>
                            <field name="company_type"/>
                            <!-- <field name="commission"/> -->
                            <field name="comment" placeholder="512 characters max"/>
                        </group>
                        <group string="Company bank details">
                            <field name="country"/>
                            <field name="company_name"/>
<!--                            <field name="swift_code"/>-->
                            <field name="company_phone"/>
                            <field name="company_email"/>
                            <field name="fax"/>
                            <field name="registered_address" context="{'default_company_id': active_id}">
                                <tree editable="bottom">
                                    <field name="postal_code"/>
                                    <field name="country"/>
                                    <field name="region"/>
                                    <field name="district"/>
                                    <field name="city"/>
                                    <field name="location"/>
                                    <field name="street"/>
                                    <field name="house"/>
                                    <field name="building"/>
                                    <field name="block"/>
                                    <field name="apartment"/>
                                </tree>
                                <form string="Registered Address">
                                    <group>
                                        <field name="postal_code"/>
                                        <field name="country"/>
                                        <field name="region"/>
                                        <field name="district"/>
                                        <field name="city"/>
                                        <field name="location"/>
                                        <field name="street"/>
                                        <field name="house"/>
                                        <field name="building"/>
                                        <field name="block"/>
                                        <field name="apartment"/>
                                    </group>
                                </form>
                            </field>
                            <field name="not_the_same_registered_address"/>
                            <field name="postal_address" context="{'default_company_id': active_id}"
                                   invisible="not_the_same_registered_address">
                                <tree editable="bottom">
                                    <field name="postal_code"/>
                                    <field name="country"/>
                                    <field name="region"/>
                                    <field name="district"/>
                                    <field name="city"/>
                                    <field name="location"/>
                                    <field name="street"/>
                                    <field name="house"/>
                                    <field name="building"/>
                                    <field name="block"/>
                                    <field name="apartment"/>
                                </tree>
                                <form string="Postal Address">
                                    <group>
                                        <field name="postal_code"/>
                                        <field name="country"/>
                                        <field name="region"/>
                                        <field name="district"/>
                                        <field name="city"/>
                                        <field name="location"/>
                                        <field name="street"/>
                                        <field name="house"/>
                                        <field name="building"/>
                                        <field name="block"/>
                                        <field name="apartment"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group string="Bank Account">
                            <field name="currency"/>
                            <field name="bank_details"/>
                        </group>
                        <group string="Foreign currency accounts">
                            <field name="addition_account_number_id" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="currency"/>
                                    <field name="name_legal_entity"/>
                                    <field name="legal_name"/>
                                    <field name="bank_name"/>
                                    <field name="SWIFT"/>
                                    <field name="account"/>
                                    <field name="correspondent_name"/>
                                    <field name="correspondent_swift"/>
                                    <field name="correspondent_account"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="currency"/>
                                        <field name="name_legal_entity"/>
                                        <field name="legal_name"/>
                                        <field name="bank_name"/>
                                        <field name="SWIFT"/>
                                        <field name="account"/>
                                        <field name="correspondent_name"/>
                                        <field name="correspondent_swift"/>
                                        <field name="correspondent_account"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group string="Contact person details">
                            <field name="responsible_person_id" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="last_name"/>
                                    <field name="first_name"/>
                                    <field name="middle_name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="last_name"/>
                                        <field name="first_name"/>
                                        <field name="middle_name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>
                    <page string="Company staff">
                        <group string="Staff list">
                            <field name="company_staff" widget="one2many_list"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>

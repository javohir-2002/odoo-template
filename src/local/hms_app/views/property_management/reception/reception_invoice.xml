<odoo>
    <record id="view_reception_invoice_tree" model="ir.ui.view">
        <field name="name">reception.invoice.tree</field>
        <field name="model">reception.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="invoice_number"/>
                <field name="room_number"/>
                <field name="bill_to"/>
                <field name="services"/>
                <field name="amount"/>
                <field name="to_be_paid"/>
                <field name="to_be_refunded"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_invoice_form" model="ir.ui.view">
    <field name="name">reception.invoice.form</field>
    <field name="model">reception.invoice</field>
    <field name="arch" type="xml">
        <form string="Invoice">
            <sheet>
                <group>
                    <group>
                        <field name="invoice_number"/>
                        <field name="room_number"/>
                        <field name="bill_to"/>
                    </group>
                    <group>
                        <field name="booking_id"/>
                        <field name="services"/>
                        <field name="amount"/>
                        <field name="to_be_paid"/>
                        <field name="to_be_refunded"/>
                        <field name="status"/>
                        <field name="is_visible_refund_btn"/>
                        <field name="is_visible_payment_btn"/>
                    </group>
                </group>
                <group>
                    <field name="room_service_ids">
                        <tree string="Room Services">
                            <field name="service"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </group>
            </sheet>
        </form>
    </field>
</record>

</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_invoice_payment_form" model="ir.ui.view">
        <field name="name">reception.payment.form</field>
        <field name="model">reception.payment</field>
        <field name="arch" type="xml">
            <form string="Invoice Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="bill_to" readonly="1"/>
                            <field name="payment_date"/>
                            <field name="payment_methods"/>
                        </group>
                        <group>
                            <field name="payment"/>
                            <field name="amount" readonly="1"/>
                            <field name="to_be_paid" readonly="1"/>
                            <field name="comment"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

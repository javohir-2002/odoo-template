<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reception_booking_form" model="ir.ui.view">
            <field name="name">reception.booking.form</field>
            <field name="model">booking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Booking">

                        <notebook>

                            <page name="first_page" string="Details">
                                <group string="Main parameters">
                                    <field name="unique_id" invisible="1"/>
                                    <field name="guest_id" string="Customer"/>
                                    <field name="date_of_stay_and_guests"/>
                                    <field name="rate_plan"/>
                                    <field name="accommodation" can_create="True" can_write="True"
                                           field_id="accommodation_0" domain="[('booking_unique', '=', unique_id)]"/>
                                    <field name="room_number"/>
                                    <field name="dont_move"/>
                                    <field name="check_in_time"/>
                                    <field name="checkout_time"/>
                                </group>

                                <group string="Billing">
                                    <field name="deposit"/>
                                    <field name="guarantee_method"/>
                                    <field name="service_and_accommodation"/>
                                    <field name="total"/>
                                    <field name="payment_due"/>
                                </group>

                                <group string="Guests">
                                    <field name="guest_id"/>
                                </group>

                                <group string="Additional settings">
                                    <field name="customer_company_id"/>
                                    <field name="agent_company_id"/>
                                    <field name="point_of_sale"/>
                                    <field name="purpose_of_visit"/>
                                    <field name="market_segment"/>
                                    <field name="customer_language"/>
                                    <field name="guest_comment"/>
                                    <field name="tags"/>
                                </group>
                            </page>
                            <page name="accommodation" string="Service and accommodation">
                                <group string="Stay details">
                                    <field name="price_detail_ids">
                                        <tree string="Booking Price Detail">

                                            <field name="rate_plan_id"/>
                                            <field name="price"/>
                                            <field name="date"/>
                                            <field name="discount_id"/>
                                            <field name="amount"/>
                                            <field name="active"/>
                                        </tree>
                                    </field>
                                    <field name="total_services"/>
                                </group>
                                <group string="Service details">
                                    <field name="room_service_id">
                                        <tree>
                                            <field name="service"/>
                                            <field name="payment_type"/>
                                            <field name="charge_type"/>
                                            <field name="delivery_date"/>
                                            <field name="price"/>
                                            <field name="quantity"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

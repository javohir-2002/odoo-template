<odoo>
    <!-- Tree View -->
    <record id="view_reception_deposit_tree" model="ir.ui.view">
        <field name="name">reception.deposit.tree</field>
        <field name="model">reception.deposit</field>
        <field name="arch" type="xml">
            <tree string="Deposits">
<!--                <field name="invoice_id"/>-->
                <field name="booking_id"/>
                <field name="guest_id"/>
                <field name="bill_to"/>
                <field name="amount"/>
                <field name="total_deposit"/>
                <field name="payment_date"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_reception_deposit_form" model="ir.ui.view">
        <field name="name">reception.deposit.form</field>
        <field name="model">reception.deposit</field>
        <field name="arch" type="xml">
            <form string="Deposit">
                <group>
<!--                    <field name="invoice_id"/>-->
                    <field name="booking_id"/>
                    <field name="guest_id"/>
                    <field name="bill_to"/>
                    <field name="amount"/>
                    <field name="total_deposit"/>
                    <field name="payment_date"/>
                    <field name="comment"/>
                    <field name="action_type"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_reception_deposit" model="ir.actions.act_window">
        <field name="name">Deposits</field>
        <field name="res_model">reception.deposit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new deposit.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_reception_deposit" name="Deposits" parent="additional_menu" action="action_reception_deposit"/>
</odoo>

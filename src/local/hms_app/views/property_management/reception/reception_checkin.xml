<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_checkin_tree" model="ir.ui.view">
        <field name="name">reception.checkin.tree</field>
        <field name="model">reception.checkin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="unique_id"/>
                <field name="room_type_id"/>
                <field name="room_number"/>
                <field name="check_in_date"/>
                <field name="check_in_time"/>
            </tree>
        </field>
    </record>

    <record id="view_checkin_form" model="ir.ui.view">
        <field name="name">reception.checkin.form</field>
        <field name="model">reception.checkin</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reception_id"/>
                        <field name="unique_id"/>
                        <field name="room_type_id"/>
                        <field name="room_number"/>
                        <field name="check_in_date"/>
                        <field name="check_in_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>

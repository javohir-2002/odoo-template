<odoo>
    <record id="view_reception_tree" model="ir.ui.view">
        <field name="name">reception.tree</field>
        <field name="model">reception</field>
        <field name="arch" type="xml">
           <tree string="Reception" js_class="Reception">
<!--             <tree string="Reception">-->
<!--                 <field name="is_check_in"/>-->
                <field name="id"/>
                <field name="booking_id"/>
                <field name="unique_id"/>
                <field name="guest_id" string="Customer"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="middle_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="citizenship"/>
                <field name="room_number"/>
                <field name="check_in_date"/>
                <field name="check_in_time"/>
                <field name="check_out_date"/>
                <field name="checkout_time"/>
                <field name="room_type_id"/>
                <field name="nights"/>
                <field name="adults"/>
                <field name="children"/>
                <field name="total"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_reception_form" model="ir.ui.view">
        <field name="name">reception.form</field>
        <field name="model">reception</field>
        <field name="arch" type="xml">
            <form string="Reception">
                <sheet>
                    <notebook>
                        <page name="first_page" string="Details">
                            <group>
                                <group>
                                    <field name="guest_id" string="Customer"/>
                                    <field name="booking_id"/>
                                    <field name="check_in_date"/>
                                    <field name="check_out_date"/>
                                    <field name="nights"/>
                                    <field name="adults"/>
                                    <field name="children"/>
                                    <field name="rate_plan"/>
                                    <field name="accommodation" domain="[('booking_unique', '=', unique_id)]"/>
                                    <field name="room_number" can_create="True" can_write="True" readonly="dont_move" domain="[('room_type', '=', room_type_id), ('id', 'in', available_room_ids)]"/>
                                    <field name="dont_move"/>
                                    <field name="check_in_time"/>
                                    <field name="checkout_time"/>
                                    <field name="deposit"/>
                                    <field name="guarantee_method"/>
                                    <field name="service_and_accommodation"/>
                                    <field name="total"/>
                                    <field name="payment_due"/>
                                </group>
                                <group>
                                    <field name="guest_id" string="Guests"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="middle_name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="gender"/>
                                    <field name="citizenship"/>
                                    <field name="tag"/>
                                    <field name="customer_company_id"/>
                                    <field name="agent_company_id"/>
                                    <field name="point_of_sale"/>
                                    <field name="market_segment"/>
                                    <field name="purpose_of_visit"/>
                                    <field name="customer_language"/>
                                    <field name="guest_comment"/>
                                </group>
                                <group>
                                    <field name="room_type_id"/>
                                    <field name="payment_method"/>
                                    <field name="total_summary"/>
                                    <field name="staff"/>
                                    <field name="price_detail_ids">
                                        <tree string="Booking Price Detail">
                                            <field name="rate_plan_id"/>
                                            <field name="price"/>
                                            <field name="date"/>
                                            <field name="discount_id"/>
                                            <field name="amount"/>
                                            <field name="active"/>
                                        </tree>
                                    </field>
                                    <field name="room_service_id">
                                        <tree string="Room Services">
                                            <field name="service"/>
                                            <field name="payment_type"/>
                                            <field name="charge_type"/>
                                            <field name="delivery_date"/>
                                            <field name="price"/>
                                            <field name="quantity"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                    <field name="available_room_ids" widget="many2many_tags"/>
                                    <field name="send_email"/>
                                    <field name="status"/>
                                    <field name="arrival_status"/>
                                    <field name="departure_status"/>
                                    <field name="guest_status"/>
                                    <field name="unique_id"/>
                                    <field name="group_unique_id"/>
                                    <field name="regenerate_accommodations"/>
                                </group>
                            </group>
                        </page>
                        <page name="services_accommodation" string="Services and Accommodation">
                            <group>
                                <field name="price_detail_ids">
                                    <tree string="Stay details">
                                        <field name="date"/>
                                        <field name="rate_plan_id"/>
                                        <field name="price"/>
                                        <field name="discount_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <field name="total_summary"/>
                                <field name="room_service_id">
                                    <tree string="Room Services">
                                        <field name="service"/>
                                        <field name="payment_type"/>
                                        <field name="charge_type"/>
                                        <field name="delivery_date"/>
                                        <field name="price"/>
                                        <field name="quantity"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <field name="total_services"/>
                            </group>
                        </page>
                        <page name="invoice_and_payment" string="Inovices and Payments">
                            <group>
                                <field name="invoice_ids">
                                    <tree>
                                        <field name="invoice_number"/>
                                        <field name="room_number"/>
                                        <field name="bill_to"/>
                                        <field name="services"/>
                                        <field name="to_be_paid"/>
                                        <field name="to_be_refunded"/>
                                        <field name="status"/>
                                        <button name="action_apply_payment" type="object" string="Payment"/>
                                        <button name="action_apply_prefund" type="object" string="Refund"/>
                                        <button name="action_make_deposit" type="object" string="Make Deposit"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="documents" string="Documents">
                            <group>
                                <field name="document_ids">
                                    <tree>
                                        <field name="unique_id"/>
                                        <field name="room_number"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="notes" string="Notes">
                            <group>
                                <field name="notes_ids">
                                    <tree>
                                        <field name="created_changed_time"/>
                                        <field name="room_number_id"/>
<!--                                        <field name="room_type_id"/>-->
                                        <field name="text"/>
                                        <field name="scheduled"/>
                                        <field name="user"/>
                                        <field name="status"/>
                                    </tree>
                                    <form>
                                        <group>

<!--                                        <field name="reception_id" string="Booking"/>-->
                                        <field name="text" string="Test"/>
                                        <field name="status"/>
                                        <field name="scheduled" readonly="readonly_schedul_for"/>
                                        <field name="readonly_schedul_for" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page string="Change History">
                            <field name="change_history_ids">
                                <tree>
                                    <field name="change_time"/>
                                    <field name="room_number"/>
                                    <field name="user_id"/>
                                    <field name="field_name"/>
                                    <field name="old_value"/>
                                    <field name="new_value"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

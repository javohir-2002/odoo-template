<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_booking_window_tree" model="ir.ui.view">
        <field name="name">booking.window.tree</field>
        <field name="model">booking.window</field>
        <field name="arch" type="xml">
<!--            <tree string="Booking window" js_class="SalesAndOccupancyViews">-->
            <tree string="Booking window">
                <field name="booking_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
                <field name="nights"/>
                <field name="adults"/>
                <field name="children"/>
                <field name="customer_company_id"/>
                <field name="agent_company_id"/>
                <field name="rate_plan"/>
                <field name="room_type_id"/>
                <field name="accommodation"/>
                <field name="room_number"/>
                <field name="available_room_ids"/>
                <field name="dont_move"/>
                <field name="check_in_time"/>
                <field name="checkout_time"/>
                <field name="price_detail_ids"/>
                <field name="room_service_id"/>
                <field name="room_service_ids"/>
                <field name="guest_id"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="middle_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="send_email"/>
                <field name="citizenship"/>
                <field name="deposit"/>
                <field name="guarantee_method"/>
                <field name="service_and_accommodation"/>
                <field name="total"/>
                <field name="payment_due"/>
                <field name="unique_id"/>
                <field name="regenerate_accommodations"/>
                <field name="group_unique_id"/>
                <field name="total_summary"/>
                <field name="price_detail_total"/>
                <field name="average_daily_rate"/>
                <field name="cost_of_stay"/>
                <field name="point_of_sale"/>
                <field name="purpose_of_visit"/>
                <field name="tag"/>
                <field name="payment_method"/>
                <field name="market_segment"/>
                <field name="staff"/>
                <field name="guest_status"/>
                <field name="customer_language"/>
                <field name="guest_comment"/>
                <field name="total_services"/>
                <field name="status"/>
                <field name="arrival_status"/>
                <field name="departure_status"/>
<!--                <field name="date_of_stay_and_guests"/>-->
                <field name="tags"/>
                <field name="change_history_ids"/>
                <field name="is_check_in"/>
                <field name="is_check_out"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_booking_window_form" model="ir.ui.view">
        <field name="name">booking.window.form</field>
        <field name="model">booking.window</field>
        <field name="arch" type="xml">
            <form string="Booking window">
                <sheet>
                    <group>
                        <field name="booking_id"/>
                        <field name="check_in_date"/>
                        <field name="check_out_date"/>
                        <field name="total"/>
                        <!-- Add other fields as necessary -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

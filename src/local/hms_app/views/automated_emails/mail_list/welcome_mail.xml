<odoo>
    <record id="view_welcome_mail_form" model="ir.ui.view">
        <field name="name">welcome.mail.form</field>
        <field name="model">welcome_mail</field>
        <field name="arch" type="xml">
            <form string="Welcome Mail" create="0" delete="0">
                <sheet>
                    <group>
                        <button name="action_send_test_email" type="object" string="Send Test Email" class="custom-send-btn btn-primary"/>
                    </group>
<!--                    <header>-->
<!--                        <button name="action_test_get_booking_details" string="Test Booking Details" type="object" class="btn-primary"/>-->
<!--                    </header>-->
                    <group>
                        <field name="name"/>
                        <field name="email_from"/>
                        <field name="subject"/>
                        <field name="color"/>
                    </group>
                    <group>
                        <field name="opening_note" widget="html" options="{'collaborative': true, 'resizable': true}"/>
                        <field name="include_opening_note"/>
                        <field name="welcome_text" widget="html" options="{'collaborative': true, 'resizable': true}"/>
                        <field name="include_welcome_text"/>
                        <field name="booking_details"/>
                        <field name="payment_methods_comments"/>
                        <field name="cancelation_terms"/>
<!--                        <field name="weather_forecast"/>-->
                        <field name="outline" widget="html" options="{'collaborative': true, 'resizable': true}"/>
                        <field name="include_outline"/>
                    </group>
                    <group>
                        <field name="result" widget="html" options="{'collaborative': true, 'resizable': true}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<odoo>
    <record id="send_test_mail_form" model="ir.ui.view">
        <field name="name">email.form.view</field>
        <field name="model">send.test.mail</field>
        <field name="arch" type="xml">
            <form string="Send Test Email">
                <group>
                    <field name="email_to"/>
                </group>
                <footer>
                    <button string="Send" type="object" name="send_test_email" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

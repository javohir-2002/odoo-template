<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mail_list_form" model="ir.ui.view">
        <field name="name">mail.list.form</field>
        <field name="model">mail.list</field>
        <field name="arch" type="xml">
            <form string="Mail List" create="0" delete="0">
                <sheet>
                    <notebook>
                        <page string="Welcome Mail">
                            <group>
                                <field name="wm_booking_engine"/>
                                <field name="wm_channel_manager"/>
                                <field name="wm_channel_manager_send_cancellation"/>
                                <field name="wm_front_desk"/>
                                <field name="wm_send_to_guest"/>
                                <field name="wm_mail_copies"/>
                                <field name="welcome_mail" modifiers="{'readonly': [('welcome_mail', '!=', False)]}"/>
                            </group>
                        </page>
                        <page string="Feedback Mail">
                            <group>
                                <field name="fb_booking_engine"/>
                                <field name="fb_channel_manager"/>
                                <field name="fb_front_desk"/>
                                <field name="fb_send_to_guest"/>
                                <field name="fb_mail_copies"/>
                                <field name="feedback_mail" modifiers="{'readonly': [('feedback_mail', '!=', False)]}"/>
                            </group>
                        </page>
                        <page string="Incomplete Booking for a Guest">
                            <group>
                                <field name="ig_booking_engine"/>
                                <field name="ig_send_to_guest"/>
                                <field name="incomplete_booking_guest" modifiers="{'readonly': [('incomplete_booking_guest', '!=', False)]}"/>
                            </group>
                        </page>
                        <page string="Incomplete Booking for Property">
                            <group>
                                <field name="ip_booking_engine"/>
                                <field name="ip_mail_copies"/>
                                <field name="ip_send_to_guest"/>
                                <field name="incomplete_booking_property" modifiers="{'readonly': [('incomplete_booking_property', '!=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

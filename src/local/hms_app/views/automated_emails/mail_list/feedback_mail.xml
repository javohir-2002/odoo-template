<odoo>
    <record id="view_feedback_mail_form" model="ir.ui.view">
        <field name="name">feedback.mail.form</field>
        <field name="model">feedback_mail</field>
        <field name="arch" type="xml">
            <form string="Feedback Mail" create="0" delete="0">
                <sheet>
                    <group>
                        <button name="action_send_test_email" type="object" string="Send Test Email" class="custom-send-btn btn-primary"/>
                    </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email_from"/>
                            <field name="subject"/>
                            <field name="color"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Opening Note">
                            <field name="include_opening_note"/>
                            <field name="opening_note" options="{'collaborative': true, 'resizable': true}"/>
                        </page>
                        <page string="Welcome Text">
                            <field name="include_welcome_text"/>
                            <field name="welcome_text" options="{'collaborative': true, 'resizable': true}"/>
                        </page>
                        <page string="Comments">
                            <field name="include_comments"/>
                            <field name="comments" options="{'collaborative': true, 'resizable': true}"/>
                        </page>
                        <page string="Outline">
                            <field name="include_outline"/>
                            <field name="outline" options="{'collaborative': true, 'resizable': true}"/>
                        </page>
                        <page string="Result">
                            <field name="result" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

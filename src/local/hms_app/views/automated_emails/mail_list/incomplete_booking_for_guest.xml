<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_incomplete_booking_mail_form_for_guest" model="ir.ui.view">
        <field name="name">incomplete.booking.mail.form</field>
        <field name="model">incomplete_booking_mail_for_guest</field>
        <field name="arch" type="xml">
            <form string="Incomplete booking for guest" create="0" delete="0">
                <sheet>
                    <group>
                        <button name="action_send_test_email" type="object" string="Send Test Email" class="custom-send-btn btn-primary"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="email_from"/>
                        <field name="subject"/>
                        <field name="color"/>
                    </group>
                    <notebook>
                        <page string="Opening Note">
                            <group>
                                <field name="opening_note" options="{'collaborative': true, 'resizable': true}"/>
                                <field name="include_opening_note"/>
                            </group>
                        </page>
                        <page string="Message">
                            <group>
                                <field name="message" options="{'collaborative': true, 'resizable': true}"/>
                                <field name="include_message"/>
                            </group>
                        </page>
                        <page string="Booking Details">
                            <group>
                                <field name="booking_details"/>
                            </group>
                        </page>
                        <page string="Comments">
                            <group>
                                <field name="comments" options="{'collaborative': true, 'resizable': true}"/>
                                <field name="include_comments"/>
                            </group>
                        </page>
                        <page string="Outline">
                            <group>
                                <field name="outline" options="{'collaborative': true, 'resizable': true}"/>
                                <field name="include_outline"/>
                            </group>
                        </page>
                        <page string="Result">
                            <group>
                                <field name="result" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

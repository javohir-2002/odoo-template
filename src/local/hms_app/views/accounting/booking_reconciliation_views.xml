<odoo>
    <!-- Tree View -->
    <record id="view_booking_reconciliation_tree" model="ir.ui.view">
        <field name="name">booking.reconciliation.tree</field>
        <field name="model">booking.reconciliation</field>
        <field name="arch" type="xml">
            <tree js_class="Accounting">
            <!-- <tree> -->
                <field name="booking_id"/>
                <field name="booking_number"/>
                <field name="guest_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
                <field name="total"/>
                <field name="commission_amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_booking_reconciliation_form" model="ir.ui.view">
        <field name="name">booking.reconciliation.form</field>
        <field name="model">booking.reconciliation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="booking_id"/>
                        <field name="status"/>
                        <field name="booking_number"/>
                        <field name="guest_id"/>
                        <field name="check_in_date"/>
                        <field name="check_out_date"/>
                        <field name="check_in_time"/>
                        <field name="checkout_time"/>
                        <field name="total"/>
                        <field name="commission_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

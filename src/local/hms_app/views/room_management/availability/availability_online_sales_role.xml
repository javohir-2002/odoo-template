<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_tree_online_sales_role" model="ir.ui.view">
            <field name="name">online.sales.role.tree</field>
            <field name="model">availability.online_sales_role</field>
            <field name="arch" type="xml">
                <tree string="Online Sales Roles">
                    <field name="name" />
                    <field name="mark_on" />
                    <field name="number_of_days" />
                    <field name="days_checkin" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_form_online_sales_role" model="ir.ui.view">
            <field name="name">online.sales.role.form</field>
            <field name="model">availability.online_sales_role</field>
            <field name="arch" type="xml">
                <form string="Online Sales Role">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="mark_on" readonly="1" />
                            <field name="room_types" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="room_type_id" />
                                    <field name="number" />
                                </tree>
                                <form>
                                    <field name="room_type_id" />
                                    <field name="number" />
                                </form>
                            </field>
                            <field name="number_of_days" />
                            <field name="days_checkin" readonly="number_of_days != 'other'" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

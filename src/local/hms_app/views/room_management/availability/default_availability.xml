<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Tree View for DefaultData -->
    <record id="view_availability_default_data_tree" model="ir.ui.view">
        <field name="name">availability.default_data.tree</field>
        <field name="model">availability.default_data</field>
        <field name="arch" type="xml">
            <tree string="Default Data">
                <field name="room_type" />
                <field name="number" />
            </tree>
        </field>
    </record>

    <!-- Form View for DefaultData -->
    <record id="view_availability_default_data_form" model="ir.ui.view">
        <field name="name">availability.default_data.form</field>
        <field name="model">availability.default_data</field>
        <field name="arch" type="xml">
            <form string="Default Data">
                <sheet>
                    <group>
                        <field name="room_type" />
                        <field name="number" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for DefaultAvailability -->
    <record id="view_default_availability_tree" model="ir.ui.view">
        <field name="name">default.availability.tree</field>
        <field name="model">default.availability</field>
        <field name="arch" type="xml">
            <tree string="Default Availability">
                <field name="default_data" widget="one2many_list">
                    <tree editable="bottom">
                        <field name="room_type"></field>
                        <field name="number"></field>
                    </tree>
                    <form>
                        <field name="room_type"></field>
                        <field name="number"></field>
                    </form>
                </field>
            </tree>
        </field>
    </record>

    <!-- Form View for DefaultAvailability -->
    <record id="view_default_availability_form" model="ir.ui.view">
        <field name="name">default.availability.form</field>
        <field name="model">default.availability</field>
        <field name="arch" type="xml">
            <form string="Default Availability" create="false">
                <sheet>
                    <group>
                        <field name="default_data">
                            <tree editable="bottom">
                                <field name="room_type" />
                                <field name="number" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<!-- triple_views.xml -->
<odoo>
	<data>

		<!-- Tree View -->
		<record id="view_triple_tree" model="ir.ui.view">
			<field name="name">accommodation.room_types.tree</field>
			<field name="model">triple</field>
			<field name="arch" type="xml">
				<tree string="Room types" delete="0" multi_edit="1">
					<field name="sequence" widget="handle" />
					<field name="active" widget="boolean_toggle" />
					<field name="rooms" />
					<field name="room_code" />
					<field name="number_of_rooms" />
					<field name="photo_count" widget='badge'
						decoration-info='1' />
					<field name="guest_count" widget='badge'
						decoration-warning='1' />
					<field name="number_of_extra_guests" widget='badge' decoration-danger='1' />
				</tree>
			</field>
		</record>

		<!-- Form View -->
		<record id="view_triple_form" model="ir.ui.view">
			<field name="name">accommodation.triple.form</field>
			<field name="model">triple</field>
			<field name="arch" type="xml">
				<form string="Room Types" delete="0">
					<!-- <header>
						<h1 class="oe_title">Triple</h1>
					</header> -->
					<sheet>
						<h2 style="display:block;">Main settings</h2>
						<group>
							<field name="rooms" class="oe_inline" />
							<field name="room_code" class="oe_inline" help="Short name or PMS code" />
						</group>
						<notebook>
							<page string='Occupancy' name="occupancy">
								<!-- <h2 style="display:block;">Occupancy</h2> -->
								<group>
									<!-- accomodation offer -->
									<field name="accommodation_offers" />
									<!-- area -->
									<div style="display: inline-block;" class="o_form_label">
										<group>
											<field name="area" class="oe_inline" />
										</group>
									</div>
									<div style="display: inline-block;" class="o_form_label">
										<group>
											<group>
												<field name="area_m"
													widget='float' />
											</group>
											<group>
												<field name="area_max_value"
													invisible="area == 'same'" widget='float' />
											</group>
										</group>
									</div>
									<!-- <div style="display: inline-block;" class="o_form_label">
									</div> -->
									<!-- number of rooms  -->
									<field name="number_of_rooms"
										string="Number of rooms in a suite"
										class="oe_inline" />
								</group>
								<h2 style="display:block;">Guests with main occupancy</h2>
								<group>
									 <field name="guest_ids" invisible="1"/>
									<!--
										Faqat shu objectga bog'langan Guestlarni chiqarishda ishlatilinadi.
									 -->
									<field name="number_of_guests" class="oe_inline" />
									<!--									<field name="guest_ids" domain="[('room_type', '=', id)]"
									/>-->
									<field name="single_room"
										invisible="number_of_guests not in ('1','2','3','4','5','6','7')" />
									<field name="double_room"
										invisible="number_of_guests not in ('2','3','4','5','6','7')" />
									<field name="triple_room"
										invisible="number_of_guests not in ('3','4','5','6','7')" />
									<field name="fourth_room"
										invisible="number_of_guests not in ('4','5','6','7')" />
									<field name="fifth_room"
										invisible="number_of_guests not in ('5','6','7')" />
									<field name="sixth_room"
										invisible="number_of_guests not in ('6','7')" />
									<field name="seventh_room"
										invisible="number_of_guests not in ('7')" />
									<!-- ... other room types ... -->
									<field name="child_aged_from" widget="many2many_checkboxes" />
									<!-- <field name="number_of_guests" widget="selection"
										class="oe_inline" /> -->
								</group>
								<h2 style="display:block;">Extra beds in the room</h2>
								<group>
									<field name="number_of_extra_guests" widget="selection"
										class="oe_inline" />
								</group>
								<h2 style="display:block;">Child accommodation without bed</h2>
								<group>
									<field name="number_of_baby" widget="selection"
										class="oe_inline" />
								</group>
							</page>
							<page string="Room amenities" name="room_amenities">
								<group>
									<field name="video_and_audio" widget="many2many" />
									<field name="electronic_devices" widget="many2many" />
									<field name="bathroom" widget="many2many" />
									<field name="outdoor_area_and_window_view" widget="many2many" />
									<field name="internet_and_telephony" widget="many2many" />
									<field name="beds" widget="many2many" />
									<field name="furniture" widget="many2many" />
									<field name="others" widget="many2many" />
								</group>
							</page>
							<page string="Room preferences" name="rooom_preferences">
								<div
									class="alert alert-info" role="alert">
									<p
										class="mb-0">
										<i class="fa fa-info-circle" aria-hidden="true"> </i>   Room
										preferences are the conditions under which a guest would
										consider staying in a room when making a booking decision.
										Movo Booking Engine will inform guests that the preferences
										may not be guaranteed. </p>
								</div>
								<group>
									<!--									<field name="smoking_in_room" widget="many2many_tags" />-->
									<field name="smoking_room" />
									<field name="beds" widget="many2many_tags" />
									<field name="window_view" widget="many2many_tags" />
								</group>
							</page>
							<!--							<page string="Icons">-->
							<!--								<group>-->
							<!--									<field name="icon_no_1"/>-->
							<!--									<field name="icon_no_2"/>-->
							<!--									<field name="icon_no_3"/>-->
							<!--									<field name="icon_no_4"/>-->
							<!--									<field name="icon_no_5"/>-->
							<!--								</group>-->
							<!--							</page>-->
							<page string="Room description" name="room_description">
								<div
									class="alert alert-info" role="alert">
									<p
										class="mb-0">
										<i class="fa fa-info-circle" aria-hidden="true"> </i>   Tell
										your guests about the special features and room design.
										Write a few sentences of a motivating text. </p>
								</div>
								<group>
									<field name="room_description" widget="text" />
								</group>
							</page>
							<page string="Room photos" name="room_photos">
								<div class="alert alert-info" role="alert">
									<i class="fa fa-info-circle" aria-hidden="true"> </i>   <strong>Maximum
									file size
										is
										10 MB.</strong> Supported image formats: JPG, PNG and GIF.
									Max number of photos: 30. <br /> <br />
                          <p
										class="mb-0">
										The photo gallery cover is the photo that is shown first. To
									make an
										image
										a
										cover, place it first, to the right of the Upload photo
									button. We
										recommend
										using an image of the sleeping place as the cover.
									</p>
								</div>
								<field name="room_photos" />
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>

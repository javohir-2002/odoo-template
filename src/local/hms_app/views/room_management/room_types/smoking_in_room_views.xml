<!-- custom_addons/room_types/views/smoking_in_room_views.xml -->
<odoo>
    <data>

        <!-- Tree View for Smoking In Room -->
        <record id="view_smoking_in_room_tree" model="ir.ui.view">
            <field name="name">smoking.in.room.tree</field>
            <field name="model">smoking_in_room</field>
            <field name="arch" type="xml">
                <tree string="Smoking In Room">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View for Smoking In Room -->
        <record id="view_smoking_in_room_form" model="ir.ui.view">
            <field name="name">smoking.in.room.form</field>
            <field name="model">smoking_in_room</field>
            <field name="arch" type="xml">
                <form string="Smoking In Room">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Menu item for Smoking In Room -->


    </data>
</odoo>
  
<!-- custom_addons/room_types/views/furniture_views.xml -->
<odoo>
    <data>
        <!-- Tree View for Furniture -->
        <record id="view_furniture_tree" model="ir.ui.view">
            <field name="name">furniture.tree</field>
            <field name="model">furniture</field>
            <field name="arch" type="xml">
                <tree string="Furniture List">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View for Furniture -->
        <record id="view_furniture_form" model="ir.ui.view">
            <field name="name">furniture.form</field>
            <field name="model">furniture</field>
            <field name="arch" type="xml">
                <form string="Furniture">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="icon" widget="image"
								options='{"size": [150, 150],"image_preview": " photo"}' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>

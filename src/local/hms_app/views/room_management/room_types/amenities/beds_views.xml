<!-- custom_addons/room_types/views/beds_views.xml -->
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_beds_tree" model="ir.ui.view">
            <field name="name">beds.tree</field>
            <field name="model">beds</field>
            <field name="arch" type="xml">
                <tree string="Beds List" create="true">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_beds_form" model="ir.ui.view">
            <field name="name">beds.form</field>
            <field name="model">beds</field>
            <field name="arch" type="xml">
                <form string="Bed">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="icon" widget="image"
								options='{"size": [150, 150],"image_preview": " photo"}' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

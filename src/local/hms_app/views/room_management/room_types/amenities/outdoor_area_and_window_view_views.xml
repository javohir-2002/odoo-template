<!-- custom_addons/room_types/views/outdoor_area_and_window_view_views.xml -->
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_outdoor_area_and_window_view_tree" model="ir.ui.view">
            <field name="name">outdoor.area.and.window.view.tree</field>
            <field name="model">outdoor_area_and_window_view</field>
            <field name="arch" type="xml">
                <tree string="Outdoor Areas and Window Views">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_outdoor_area_and_window_view_form" model="ir.ui.view">
            <field name="name">outdoor.area.and.window.view.form</field>
            <field name="model">outdoor_area_and_window_view</field>
            <field name="arch" type="xml">
                <form string="Outdoor Area and Window View">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="icon" widget="image"
								options='{"size": [150, 150],"image_preview": " photo"}' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>

<!-- custom_addons/room_types/views/bathroom_views.xml -->
<odoo>
    <data>
        <!-- Tree View for Bathroom -->
        <record id="view_bathroom_tree" model="ir.ui.view">
            <field name="name">bathroom.tree</field>
            <field name="model">bathroom</field>
            <field name="arch" type="xml">
                <tree string="Bathrooms">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View for Bathroom -->
        <record id="view_bathroom_form" model="ir.ui.view">
            <field name="name">bathroom.form</field>
            <field name="model">bathroom</field>
            <field name="arch" type="xml">
                <form string="Bathroom">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="icon" widget="image"
								options='{"size": [150, 150],"image_preview": " photo"}' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>

<!-- custom_addons/room_types/views/internet_and_telephony_views.xml -->
<odoo>
    <data>

        <!-- Tree View for Internet And Telephony -->
        <record id="view_internet_and_telephony_tree" model="ir.ui.view">
            <field name="name">internet.and.telephony.tree</field>
            <field name="model">internet_and_telephony</field>
            <field name="arch" type="xml">
                <tree string="Internet And Telephony">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View for Internet And Telephony -->
        <record id="view_internet_and_telephony_form" model="ir.ui.view">
            <field name="name">internet.and.telephony.form</field>
            <field name="model">internet_and_telephony</field>
            <field name="arch" type="xml">
                <form string="Internet And Telephony">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="icon" widget="image"
								options='{"size": [150, 150],"image_preview": " photo"}' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_rate_plan_min_los_arrival_tree" model="ir.ui.view">
        <field name="name">rate.plan.min.los.arrival.tree</field>
        <field name="model">rate_plan.min_los_arrival</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rate_plan_id" />
                <field name="room_type_id" />
                <field name="relevant_date" />
                <field name="number" />
                <field name="reset" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rate_plan_min_los_arrival_form" model="ir.ui.view">
        <field name="name">rate.plan.min.los.arrival.form</field>
        <field name="model">rate_plan.min_los_arrival</field>
        <field name="arch" type="xml">
            <form string="Minimum Length of Stay on Arrival">
                <sheet>
                    <group>
                        <field name="rate_plan_id" />
                        <field name="room_type_id" />
                        <field name="filter_id" />
                        <field name="relevant_date" />
                        <field name="number" readonly="reset" />
                        <field name="reset" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
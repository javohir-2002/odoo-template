<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_rate_plan_payment_methods_tree" model="ir.ui.view">
        <field name="name">rate_plan.payment_methods.tree</field>
        <field name="model">rate_plan.payment_methods</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rate_plan_id" />
                <field name="room_type_id" />
                <field name="relevant_date" />
                <field name="payment_methods" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rate_plan_payment_methods_form" model="ir.ui.view">
        <field name="name">rate_plan.payment_methods.form</field>
        <field name="model">rate_plan.payment_methods</field>
        <field name="arch" type="xml">
            <form string="Payment Methods Rate Plans">
                <sheet>
                    <group>
                        <field name="rate_plan_id" />
                        <field name="room_type_id" />
                        <field name="filter_id" />
                        <field name="relevant_date" />
                        <field name="payment_methods" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
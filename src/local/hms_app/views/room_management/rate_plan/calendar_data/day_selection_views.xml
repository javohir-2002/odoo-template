<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_rate_plan_day_selection_tree" model="ir.ui.view">
            <field name="name">rate.plan.day.selection.tree</field>
            <field name="model">rate_plan.day_selection</field>
            <field name="arch" type="xml">
                <tree string="Day Selection List">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_rate_plan_day_selection_form" model="ir.ui.view">
            <field name="name">rate.plan.day.selection.form</field>
            <field name="model">rate_plan.day_selection</field>
            <field name="arch" type="xml">
                <form string="Day Selection">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
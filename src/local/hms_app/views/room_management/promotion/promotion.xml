<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree View for Promotion -->
        <record id="view_promotion_tree" model="ir.ui.view">
            <field name="name">promotion.tree</field>
            <field name="model">promotion</field>
            <field name="arch" type="xml">
                <tree string="Promotion">
                    <field name="name" decoration-primary='1' />
                    <field name="amount" />
                    <field name="type" />
                    <field name="period_of_stay" />
                    <field name="discount_is_displayed" />
                    <field name="rate_plans_count" string="Room Types" widget='badge'
                        decoration-info='1' />
                    <field name="room_types_count" string="Rate Plans" widget='badge'
                        decoration-danger='1' />
                </tree>
            </field>
        </record>

        <!-- Form View for Promotion -->
        <record id="view_promotion_form" model="ir.ui.view">
            <field name="name">promotion.form</field>
            <field name="model">promotion</field>
            <field name="arch" type="xml">
                <form string="Promotion">
<!--                    <sheet>-->
                        <h1>Promotion</h1>
                        <group string="Type and name">
                            <field name="type" />
                            <field name="name" />
                        </group>
<!--                    </sheet>-->
<!--                    <sheet>-->
                        <group string="Calculated amount">
                            <field name="amount" />
                            <field name="rounding_rule"
                                help="The roundingrule will be applied to to the discount amount." />
                        </group>
<!--                    </sheet>-->
<!--                    <sheet>-->
                        <group string="Promotion validity">
                            <group>
                                <group>
                                    <field name="period_of_stay_from" string="Period of stay"
                                        help="Discount will be applied to the stay dated running within the specified period." />
                                </group>
                                <group>
                                    <field name="period_of_stay_to" string="—"
                                        readonly="period_not_limit" />
                                    <field name="period_not_limit" string="Not limited" />
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="discount_is_displayed_from"
                                        string="Discount is displayed"
                                        help="Dates when guests see the propotion in Booking Engine." />
                                </group>
                                <group>
                                    <field name="discount_is_displayed_to" string="—"
                                        readonly="discount_not_limit" />
                                    <field name="discount_not_limit" string="Not limited" />
                                </group>
                            </group>
                            <label for="rate_plans">Rate Plans</label>
                            <field name="rate_plans" string="Rate Plans"
                                help="The cancellation policy, payment methods, early check-in and late check-out rule are determined by the rate plan to which the discount is applied." />
                            <label for="room_types">Room Types</label>
                            <field name="room_types" string="Room Types" />
                        </group>
<!--                    </sheet>-->
                </form>
            </field>
        </record>

        <!-- Search View for Promotion -->
        <record id="view_promotion_search" model="ir.ui.view">
            <field name="name">promotion.search</field>
            <field name="model">promotion</field>
            <field name="arch" type="xml">
                <search string="Promotion Search">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]" />
                    <filter string="Type" name="filter_by_type" domain="[]"
                        context="{'group_by': 'type'}" />
                </search>
            </field>
        </record>
        <!-- Promotion Types -->
        <!-- Tree View for Promotion Types -->
        <record id="view_promotion_types_tree" model="ir.ui.view">
            <field name="name">promotion.types.tree</field>
            <field name="model">promotion.types</field>
            <field name="arch" type="xml">
                <tree string="Promotion Types">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <!-- Form View for Promotion Types -->
        <record id="view_promotion_types_form" model="ir.ui.view">
            <field name="name">promotion.types.form</field>
            <field name="model">promotion.types</field>
            <field name="arch" type="xml">
                <form string="Promotion Types">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

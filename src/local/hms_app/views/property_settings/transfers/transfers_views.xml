<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_transfers_tree" model="ir.ui.view">
        <field name="name">transfers.tree</field>
        <field name="model">transfers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="status" widget="boolean_toggle" />
                <field name="type" />
                <field name="station" />
                <field name="hotel_transfer_direction" />
<!--                <field name="vehicle_count" decoration-info='1' widget='badge' />-->
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="view_transfers_form" model="ir.ui.view">
        <field name="name">transfers.form</field>
        <field name="model">transfers</field>
        <field name="arch" type="xml">
            <form>
<!--                <sheet>-->
                <group>
                    <field name="status" widget="boolean_toggle" />
                </group>
<!--                </sheet>-->
<!--                <sheet>-->
                <group>
                    <field name="type" />
                    <field name="airport" invisible="invisible_airport"/>
                    <field name="bus_station" invisible="invisible_bus_station"/>
                    <field name="railway_station" invisible="invisible_railway_station"/>
                    <field name="invisible_other" invisible="1"/>
                    <field name="invisible_airport" invisible="1"/>
                    <field name="invisible_bus_station" invisible="1"/>
                    <field name="invisible_railway_station" invisible="1"/>
                    <field name="hotel_transfer_direction" />
                    <field name="type_name" invisible="invisible_other" string="Name"/>
                    <field name="description" />
                </group>
<!--                </sheet>-->
<!--                <sheet>-->
                <group>
                    <field name="invisible_transfers_type" invisible="1" />
                    <field name="invisible_transfers_type_company" invisible="1" />
                    <field name="transfers_type" />
                    <field name="vehicle_ids" invisible="invisible_transfers_type"/>
                    <field name="price_usd" />
                    <field name="price_uzs" />
                    <field name="price_rub" />
                    <field name="transport_company" invisible="invisible_transfers_type_company" />
                </group>
<!--                </sheet>-->
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_check_in_check_out_roles_tree" model="ir.ui.view">
        <field name="name">check.in.check.out.roles.tree</field>
        <field name="model">check.in.check.out.roles</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_check_in_check_out_roles_form" model="ir.ui.view">
        <field name="name">check.in.check.out.roles.form</field>
        <field name="model">check.in.check.out.roles</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Main settings">
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
                <sheet>
                    <group string="Early check-in setting (check-in time - 14:00)"></group>
                    <div class="d-flex">
                        <div class="d-flex align-items-start gap-2">
                            <label for="from_main_settings">Check-in time</label>
                            <field name="check_in_time" widget="float_time"
                                class="oe_inline pe-2" readonly="from_main_settings"
                            />
                            <field name="from_main_settings" />
                            <span>From "Main settings" section</span>
                        </div>
                    </div>
                    <group class="mt-2">
                        <field name="check_in_time_data" />
                    </group>
                    <div class="d-flex gap-2">
                        <field name="include_a_surcharge_for_early_check_in_in_the_prepayment" />
                        <label for="include_a_surcharge_for_early_check_in_in_the_prepayment">Include
                            a Surcharge for Early Check-In in the Prepayment</label>
                    </div>
                    <div class="d-flex gap-2">
                        <field name="allow_guests_to_book_early_check_in_in_exely_booking_engine" />
                        <label for="allow_guests_to_book_early_check_in_in_exely_booking_engine">Include
                            a Surcharge for Early Check-In in the Prepayment</label>
                    </div>

                </sheet>
                <sheet>
                    <group string="Late check-out setting (check-out time - 12:00)"> </group>
                    <div class="d-flex">
                        <div class="d-flex align-items-start gap-2">
                            <label for="from_main_settings">Check-out time</label>
                            <field name="check_out_time" widget="float_time"
                                class="oe_inline pe-2" readonly="from_main_settings"
                            />
                            <field name="from_main_settings_2" />
                            <span>From "Main settings" section</span>
                        </div>
                    </div>
                    <group class="mt-2">
                        <field name="check_out_time_data" />
                    </group>

                    <div class="d-flex gap-2">
                        <field name="include_a_surcharge_for_early_check_out_in_the_prepayment" />
                        <label for="include_a_surcharge_for_early_check_out_in_the_prepayment">Include
                            a Surcharge for Early Check-In in the Prepayment</label>
                    </div>
                    <div class="d-flex gap-2">
                        <field
                            name="allow_guests_to_book_early_check_out_in_exely_booking_engine" />
                        <label
                            for="allow_guests_to_book_early_check_out_in_exely_booking_engine">Include
                            a Surcharge for Early Check-In in the Prepayment</label>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_services_tree" model="ir.ui.view">
            <field name="name">services.settings.tree</field>
            <field name="model">services.settings</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="status" widget="boolean_toggle"/>
                    <field name="service_name" />
                    <field name="dissplay_website_description" />
                    <field name="sale_title" />
                    <field name="service_type" />
                    <field name="group_of_services" />
                    <field name="title_price" />
                    <field name="service_charge_type" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_services_form" model="ir.ui.view">
            <field name="name">services.settings.form</field>
            <field name="model">services.settings</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
<!--                        <group>-->
                            <sheet>
                                <group>
                                    <field name="service_type" />
                                    <field name="service_name" />
                                    <field name="name" invisible="invisible_name"/>
                                    <field name="invisible_name" invisible="1"/>
                                </group>
                            </sheet>
                            <sheet>
                                <group>
                                    <field name="service_charge_type" />
                                    <field name="service_price_usd" />
                                    <field name="service_price_uzs" />
                                    <field name="service_price_rub" />
                                </group>
                            </sheet>
                            <sheet>
                                <group>
                                    <field name="service_exely_booking_engin" />
                                    <field name="service_front_desk" />
                                </group>
                            </sheet>
                            <sheet>
                                <group>
                                    <field name="dissplay_website_description" />
                                    <field name="dissplay_website_photos"/>
                                    <field name="group_of_services" />
                                    <field name="service_motivator" />
                                </group>
                            </sheet>
<!--                        </group>-->
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

<odoo>
	<record id="view_payment_methods_for_guests_form" model="ir.ui.view">
		<field name="name">payment.methods.for.guests.form</field>
		<field name="model">payment.methods.for.guests</field>
		<field name="arch" type="xml">
			<form string="Payment Method Details">
				<sheet>
					<group string="Main settings">
						<field name="name" />


						<label for="privacy_policy_date" string="Payment method is available" />
						<div class="o_row">
							<field name="privacy_policy_date" />
							<field
								name="payment_method_is_available_num"
								readonly="privacy_policy_date == 'always'"
								class="oe_inline" />
							<field name="payment_method_is_available"
								readonly="privacy_policy_date == 'always'"
								class="oe_inline" />
							<label for="payment_method_is_available" string="before arrival"
								style="padding-right:200px" />
						</div>

					</group>
<!--				</sheet>-->
<!--				<sheet>-->
					<group>
						<!-- <page string="Rate Plans"> -->
						<field name="rate_plan_ids" />
						<!-- </page> -->
					</group>
<!--				</sheet>-->
<!--				<sheet>-->
					<group>
						<field name="allow_cancel" widget="boolean_toggle" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_payment_methods_for_guests_tree" model="ir.ui.view">
		<field name="name">payment.methods.for.guests.tree</field>
		<field name="model">payment.methods.for.guests</field>
		<field name="arch" type="xml">
			<tree string="Available payment methods">
				<field name="sequence" widget="handle" />
				<field name="name" />
				<field name="related_count" string="Rate Plans" widget="badge" decoration-info="1" />
				<field name="combined_field" string="Movo Booking Engine availability" />
				<field name="allow_cancel" invisible="1" column_invisible="True" />
				<field name="status_tag" widget="badge" string="Allow guest to cancel booking"
					decoration-success="allow_cancel == True"
					decoration-danger="allow_cancel == False" />
			</tree>
		</field>
	</record>

</odoo>

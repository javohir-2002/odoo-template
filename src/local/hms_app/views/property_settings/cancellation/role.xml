<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_rule_name_tree" model="ir.ui.view">
        <field name="name">rule.name.tree</field>
        <field name="model">rule.name</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="starting_from" />
                <field name="description" />
                <field name="show_cancellation_terms" />
                <field name="cancellation_term_id" />
            </tree>
        </field>
    </record>

    <record id="view_rule_name_form" model="ir.ui.view">
        <field name="name">rule.name.form</field>
        <field name="model">rule.name</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Role name"/>
                        <field name="starting_from" string="Starting from"/>
                        <field name="description" />
                        <field name="show_cancellation_terms" string="Do not show cancellation terms on Movo Booking Engine"/>
                        <field name="cancellation_term_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

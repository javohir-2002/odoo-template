<!-- room_image_views.xml -->
<odoo>
	<data>

		<!-- Tree View -->
		<record id="view_state_tree" model="ir.ui.view">
			<field name="name">accommodation.state.tree</field>
			<field name="model">state</field>
			<field name="arch" type="xml">
				<tree string="State">
					<field name="region" />
				</tree>
			</field>
		</record>

		<!-- Form View -->
		<record id="view_state_form" model="ir.ui.view">
			<field name="name">accommodation.state.form</field>
			<field name="model">state</field>
			<field name="arch" type="xml">
				<form string="State">
					<sheet>
						<group>
							<field name="region" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>
  
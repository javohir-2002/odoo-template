<!-- room_image_views.xml -->
<odoo>
	<data>

		<!-- Tree View -->
		<record id="view_city_tree" model="ir.ui.view">
			<field name="name">accommodation.city.tree</field>
			<field name="model">city</field>
			<field name="arch" type="xml">
				<tree string="City">
					<field name="city" />
					<field name="region_id" />
				</tree>
			</field>
		</record>

		<!-- Form View -->
		<record id="view_city_form" model="ir.ui.view">
			<field name="name">accommodation.city.form</field>
			<field name="model">city</field>
			<field name="arch" type="xml">
				<form string="City">
					<sheet>
						<group>
							<field name="city" />
							<field name="region_id" />
						</group>
					</sheet>
				</form>
			</field>
		</record>


	</data>
</odoo>
  
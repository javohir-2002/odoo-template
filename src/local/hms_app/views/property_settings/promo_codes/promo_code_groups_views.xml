<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_promo_code_groups_tree" model="ir.ui.view">
        <field name="name">promo.code.groups.tree</field>
        <field name="model">promo_code.groups</field>
        <field name="arch" type="xml">
            <tree>
                <field name="enabled" widget="boolean_toggle" />
                <field name="group_name" />
                <field name="number_of_codes" widget='badge'
                    decoration-info='1' />
                <!-- <field name="delete" invisible="1" /> -->
                <button name="unlink" type="object" icon="fa-times" title="Delete"
                    confirm="Are you sure you want to delete this Group?" />
            </tree>
        </field>
    </record>

    <record id="view_promo_code_groups_form" model="ir.ui.view">
        <field name="name">promo.code.groups.form</field>
        <field name="model">promo_code.groups</field>
        <field name="arch" type="xml">
            <form>
                <h3>Edit a group of promo codes</h3>
                <group>
                    <field name="group_name" string="Name: " />
                    <!-- <h5>promo codes included in this group:</h5>
                    <p>
                        A rate plan must be linked with a promo code category rather than with
                        an individual promo code. Add necessary promo codes to this category.
                    </p> -->
                    <field name="promo_code_ids" />
                    <field name="enabled" />
                    <field name="view_rate_plans" />
                </group>
            </form>
        </field>
    </record>
</odoo>
<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_promo_codes_tree" model="ir.ui.view">
        <field name="name">promo.codes.tree</field>
        <field name="model">property_settings.promo_code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="status" widget="boolean_toggle" />
                <field name="promo_code" />
                <field name="usage" string="Remaining" />
                <field name="used" widget='badge'
                    decoration-info='1' />
                <field name="category" widget='badge'
                    decoration-info='1' />
                <button name="unlink" type="object" icon="fa-times" title="Delete"
                    confirm="Are you sure you want to delete this Promo Code?" />
            </tree>
        </field>
    </record>

    <record id="view_promo_codes_form" model="ir.ui.view">
        <field name="name">promo.codes.form</field>
        <field name="model">property_settings.promo_code</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="promo_code" />
                    <field name="status" />
                    <field name="usage" />
                    <field name="usage_limit" invisible="usage == 'not_limited'" />
                    <field name="period_of_stay" />
                    <field name="limited_dates" invisible="period_of_stay == 'not_limited'"
                        widget="one2many_list">
                        <tree editable="bottom">
                            <field name="date_from" />
                            <field name="date_to" />
                        </tree>
                        <form>
                            <group>
                                <field name="date_from" />
                                <field name="date_to" />
                            </group>
                        </form>
                    </field>
                    <field name="group_ids" />
                    <field name="used" />
                </group>
            </form>
        </field>
    </record>
</odoo>
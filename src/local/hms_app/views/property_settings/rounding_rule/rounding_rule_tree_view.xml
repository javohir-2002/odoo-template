<!-- rounding_rule_tree_view.xml -->

<odoo>
    <record id="view_rounding_rule_tree" model="ir.ui.view">
        <field name="name">rounding.rule.tree</field>
        <field name="model">rounding.rule</field>
        <field name="arch" type="xml">
            <tree string="Rounding Rules">
                <field name="name" />
                <field name="price_per_room" />
            </tree>
        </field>
    </record>
    <record id="view_rounding_rule_form" model="ir.ui.view">
        <field name="name">rounding.rule.form</field>
        <field name="model">rounding.rule</field>
        <field name="arch" type="xml">
            <form string="Rounding Rule">
                <sheet>
                    <h1>Rounding rule</h1>
                    <header>
                        <div
                            class="alert alert-info" role="alert">
                            <p class="mb-0">
                                <i class="fa fa-info-circle" aria-hidden="true"></i> Â  This rounding
                                rule is applied by default. If you change any rule parameters,
                                rounding settings in rate plans will be changed automatically. </p>
                        </div>
                    </header>
                    <group>
                        <field name="rounding_size" />
                        <field name="rounding_rule" />
                    </group>
                </sheet>
                <sheet>
                    <group>
                        <group>
                            <label for="price_per_room">Price Per Room</label>
                            <field name="price_per_room" string="" />
                            <field name="price_per_room_2" string="" />
                        </group>
                        <group>
                            <label for="round_rate">Round rate</label>
                            <field name="round_rate" readonly="1" string='' />
                            <field name="round_rate_2" readonly="1" string='' />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
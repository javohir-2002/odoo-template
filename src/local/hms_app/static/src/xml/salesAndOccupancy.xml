                    <div class="room-type-default" t-att-class="{'d-none': state.activeTab !== 'loading'}">
                        <div class="d-flex align-items-center gap-3">
                            <div>
                                <label>Scale</label>
                                <select class="form-select" t-model="state.filter.scale">
                                    <option value="day">Day</option>
                                    <option value="week">Week</option>
                                    <option value="month">Month</option>
                                </select>
                            </div>
                            <div>
                                <label>Data</label>
                                <select class="form-select" t-model="state.filter.reservationData">
                                    <option value="nightNumberPCS">Night number, pcs</option>
                                    <option value="nightNumberUZS">Night number, UZS</option>
                                    <option value="averageCostPerNight">Average cost per night, UZS</option>
                                </select>
                            </div>
                            <div>
                                <label>Source</label>
                                <select class="form-select">
                                    <option value="all">All</option>
                                    <option value="officalSite">Offical site</option>
                                    <option value="channelManager">Channel manager</option>
                                    <option value="exelyPMS">Movo PMS</option>
                                    <option value="Others">Others</option>
                                </select>
                            </div>
                            <div>
                                <label>Status</label>
                                <select class="form-select">
                                    <option value="active">Active</option>
                                    <option value="canceled">Cancelled</option>
                                </select>
                            </div>
                            <span class="ms-5 mt-auto mb-2">Searchable period</span>
                            <div>
                                <label for="startDate">From</label>
                                <input  id="startDate" t-model="state.searchFrom" class="form-control w-100" type="date" />
                            </div>
                            <div>
                                <label for="startDate">To</label>

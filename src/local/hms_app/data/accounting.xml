<odoo>
    <data noupdate="1">
        <record id="ir_cron_monthly_reconciliation" model="ir.cron">
            <field name="name">Monthly Reconciliation</field>
            <field name="model_id" ref="model_booking"/>
            <field name="state">code</field>
            <field name="code">model._generate_monthly_reconciliation()</field>
            <field name="interval_type">months</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1, months=1, days=-1, hour=23, minute=59, second=59)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>

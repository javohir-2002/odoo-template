<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_order_detail">
        <html>
            <head>
                <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            </head>
            <body>
                <t>
                    <div class="page">
                        <div class="row mt32">
                            <div class="col-xs-12">
                                <h2 style="text-align: center;">Order Detail</h2>
                                <div class="container" style="margin-bottom:10px;">
                                    <div class="row col-12">
                                        <div class="col-6">
                                            <strong>F.I.O : </strong>
                                            <span t-field="patient_data.name" />
                                        </div>
                                        <div class="col-6">
                                            <strong>Birth Date : </strong>
                                            <span t-field="patient_data.date" />
                                        </div>
                                        <div class="col-6">
                                            <strong>Age : </strong>
                                            <span t-field="patient_data.gender" />
                                        </div>
                                        <div class="col-6">
                                            <strong>Gender : </strong>
                                            <span t-field="patient_data.gender" />
                                        </div>
                                        <div class="col-6">
                                            <strong>Department : </strong>
                                            <span t-field="patient_visit_id.department_id" />
                                        </div>
                                        <div class="col-6">
                                            <strong>Doctor : </strong>
                                            <span t-field="patient_visit_id.doctor_id" />
                                        </div>
                                    </div>
                                </div>
                                <table border="1"
                                    style="border-collapse: collapse;width: 100%;">
                                    <thead>
                                        <tr style="background-color: #D6EEEE;">
                                            <th>ID</th>
                                            <th>Service</th>
                                            <th>Discount</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align: center;">
                                        <t t-foreach="docs" t-as="o">
                                            <tr>
                                                <td style="text-align: left;padding: 8px;">
                                                    <span t-field="o.id" />
                                                </td>
                                                <td style="text-align: left;padding: 8px;">
                                                    <span t-field="o.service_id" />
                                                </td>
                                                <td style="text-align: left;padding: 8px;">
                                                    <span t-field="o.discount" />
                                                </td>
                                                <td style="text-align: left;padding: 8px;">
                                                    <span t-field="o.price" />
                                                </td>
                                                <td style="text-align: left;padding: 8px;">
                                                    <span t-field="o.total" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <div
                                    style="margin-top: 8px; border: 2px solid black; text-align: center; background-color: #D6EEEE;">
                                    <strong style="font-size: 23px;padding-left: 7px;">Total:</strong>
                                    <span style="font-size: 23px; float: right; padding-right: 7px;">
                                        <t t-esc="sum(o.total for o in docs)" />
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </body>
        </html>
    </template>
</odoo>

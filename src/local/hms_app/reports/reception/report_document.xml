<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_document_template">
        <t t-call="web.external_layout">
            <main>
                <div class="page">
                    <div class="header">
                        <h2 style="color: #4F2A87; text-align: center;">Emin hotel</h2>
                        <p style="text-align: center;">Ферганская область, Ферганский район район, г. Фергана, ул. Б.МАРГИЛОНИЙ, д. 22</p>
                        <p style="text-align: center;">Телефон: +998732442288, +998332442288</p>
                        <p style="text-align: center;">Email: eminhotelferghana@gmail.com</p>
                    </div>

                    <div>
                        <h3 class="section-title">Детали бронирования</h3>
                        <table class="details-table">
                            <thead>
                                <tr>
                                    <th>Заезд</th>
                                    <th>Выезд</th>
                                    <th>Ночей</th>
                                    <th>Гостей</th>
                                    <th>Номеров</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td t-esc="doc.check_in_date"/>
                                        <td t-esc="doc.check_out_date"/>
                                        <td t-esc="doc.nights"/>
                                        <td t-esc="doc.adults + doc.children"/>
                                        <td t-esc="doc.room_number.number"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <h3 class="section-title">Данные заказчика</h3>
                        <table class="customer-table">
                            <thead>
                                <th>ФИО</th>
                                <th>Телефон</th>
                                <th>Email</th>
                                <th>Подписка на email, SMS-рассылку</th>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td t-esc="doc.guest_id.full_name"/>
                                        <td t-esc="doc.guest_id.phone"/>
                                        <td t-esc="doc.guest_id.email"/>
                                        <td t-esc="doc.reception_id.send_email"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <h3 class="section-title">Стоимость бронирования</h3>
                        <table class="pricing-table">
                            <tbody>
                                <tr>
                                    <th>Тариф</th>
                                    <td>Тариф с завтраком</td>
                                </tr>
                                <tr>
                                    <th>№1: Deluxe</th>
                                    <td>11 070 000 UZS</td>
                                </tr>
                                <tr>
                                    <td>Размещение</td>
                                    <td>1 взрослый</td>
                                </tr>
                                <tr>
                                    <td>Услуга</td>
                                    <td>Завтрак "Шведский стол"</td>
                                </tr>
                                <tr>
                                    <td>Услуга</td>
                                    <td>Парковка</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <h3 class="section-title">Общая стоимость</h3>
                        <table class="total-table">
                            <tbody>
                                <tr>
                                    <th>Способ оплаты</th>
                                    <td>Оплата при заселении</td>
                                </tr>
                                <tr>
                                    <th>Внесена предоплата</th>
                                    <td>0 UZS</td>
                                </tr>
                                <tr>
                                    <th>К оплате гостем</th>
                                    <td>11 070 000 UZS</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="rate-description" style="margin-top: 20px; border-top: 1px solid #ddd; padding-top: 10px;">
                        <h3>Описание тарифа</h3>
                        <p>Тариф с завтраком</p>
                        <p>Внос и вынос багажа. Бесплатный Wi-Fi. Охраняемая парковка для автомобилей. Завтрак с 07:00 по 10:00.</p>
                        <p>Завтрак "Шведский стол" включен</p>
                    </div>
                </div>
            </main>
        </t>
    </template>


    <record id="action_report_document" model="ir.actions.report">
        <field name="name">Document</field>
        <field name="model">document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms_app.report_document_template</field>
        <field name="report_file">hms_app.report_document_template</field>
        <field name="binding_model_id" ref="hms_app.model_document"/>
        <field name="print_report_name">'Document - %s' % (
                    object.reception_id.booking_id.unique_id or 'Document').replace('/', '')</field>
    </record>
</odoo>

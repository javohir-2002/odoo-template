<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_booking_guest_document">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            Booking Guest Information
                        </h2>
                        <div>
                            <strong>Guest: </strong>
                            <span t-field="doc.guest_id.first_name"/> <span t-field="doc.guest_id.last_name"/>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="doc.total_amount"/>
                            </tbody>
                        </table>
                        <p><strong>Total Amount:</strong> <t t-esc="doc.total_amount"/></p>
                        <p><strong>Booking Count:</strong> <t t-esc="doc.booking_count"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hms.ProfileComponent">
        <div t-ref="componentRef" class="d-flex navbar">
            <div class="user-container">
                <div class="name-wrapper">
                    <p class="user-fullname m-0">
                        <t t-esc="this.state.user.name"/>
                    </p>
                    <p class="username m-0">
                       <t t-esc="this.state.user.userName"/>
                    </p>
                </div>
                <button class="navbar_button" t-on-click="toggleDropdown">
                    <t t-esc="this.state.user.name.slice(0,1)"/>
                </button>
                <span class="button-icon" t-on-click="toggleDropdown">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M6 9L12 15L18 9" stroke="#B5B5BA" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </span>
            </div>
            <div t-att-class="state.dropdownVisible ? 'dropdown-menu' : 'd-none'">
                <div class="dropdown-item d-flex">
                    <strong>
                        <t t-esc="state.user.name"/>
                    </strong>
                    <span class="mt-1">
                        <t t-esc="state.user.userName"/>
                    </span>
                </div>
                <hr />
                <div class="dropdown-item" t-on-click="navigateToUserProfile">
                    <i class="fa-solid fa-user"></i>
                    My profile
                </div>
                <div class="dropdown-item" t-on-click="goSettings">
                    <i class="fa-solid fa-gear"></i>
                    Settings
                </div>
                <div class="dropdown-item">
                    <i class="fa-solid fa-flag"></i>
                    Language
                    <select class="language_select">
                        <option>English</option>
                        <option>Uzbek</option>
                        <option>Russian</option>
                    </select>
                </div>
                <a href="#" class="dropdown-item">
                    <i class="fa-solid fa-chart-pie"></i>
                    Analytics (soon)
                </a>
                <hr />
                <a href="/web/session/logout" class="dropdown-item">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    Log out
                </a>
            </div>
        </div>
    </t>
</templates>
